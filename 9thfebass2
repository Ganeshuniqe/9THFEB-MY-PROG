#include<stdio.h>
#include<conio.h>
void main()
{
   int a[10];
   int i, sum = 0,n;
   int *ptr;
   printf("\nEnter no of  elements in array : ");
   scanf("%d",&n);
   printf("enter elements in array:");
   for (i = 0; i < n; i++)
   {
      scanf("%d", &a[i]);
   }
   ptr = a; /* a=&a[0] */
 
   for (i = 0; i < n; i++)
   {
      sum = sum + *ptr;
      ptr++;
   }
 
   printf("The sum of array elements : %d", sum);
}

